<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.mysql.board.mapper.MemberMapper">
	<select id="getMemberList" resultType="com.mysql.board.entity.Member">
		select * from member order by num desc
	</select>

	<select id="loginCheck" parameterType="com.mysql.board.entity.Member" resultType="Integer">
		select count(*) from member where id like #{id} and pw like #{pw}
	</select>
	
	<select id="vaildId" parameterType="String" resultType="Integer">
		select count(*) from member where id like #{id}
	</select>
	
	<select id="memberInfo" parameterType="Integer" resultType="com.mysql.board.entity.Member">
		select * from member where num = #{num}
	</select>
	
	<select id="updateMemberInfo" parameterType="String" resultType="com.mysql.board.entity.Member">
		select * from member where id like #{id}
	</select>
	
	<insert id="insertMember" parameterType="com.mysql.board.entity.Member">
		insert into member (id,pw,email) values(#{id}, #{pw}, #{email});
	</insert>
	
	<update id="updateMember" parameterType="com.mysql.board.entity.Member">
		update member set pw=#{pw}, email=#{email} where id like #{id}
	</update>
	
	<delete id="removeMember" parameterType="String">
		delete from member where id like #{id}
	</delete>
	
</mapper>